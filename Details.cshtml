@model CMCS.Models.Claim

@{
    ViewData["Title"] = "Claim Details";
}

<h2>Claim Details</h2>

<div class="card"> 
    <div class="card-body">
        <h5 class="card-title">Claim ID: @Model.ClaimId</h5>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p class="card-text"><strong>Lecturer ID:</strong> @Model.LecturerId</p>
        <p class="card-text"><strong>Hours Worked:</strong> @Model.HoursWorked</p>
        <p class="card-text"><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>

        @if (!string.IsNullOrEmpty(Model.RejectionReason))
        {
            <p class="card-text text-danger"><strong>Reason for Rejection:</strong> @Model.RejectionReason</p>
        }


        @if (!string.IsNullOrEmpty(Model.UploadedDocumentPath))
        {
            <p class="card-text">
                <strong>Uploaded Document:</strong> 
                <a href="@Model.UploadedDocumentPath" target="_blank" class="btn btn-primary btn-sm">Download</a>
            </p>
        }
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Index", "Claim")" class="btn btn-secondary">Back to Claims</a>
</div>
